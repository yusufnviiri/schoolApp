@model Payment
<div class="container">
    <h5 class=" w-25 m-auto my-2">Cash Payment Ledger</h5>
    <form method="post">
        <input type="hidden" asp-for="@Model.StaffId" class="col-3" />

        <div class="row gap-1 mb-2">
            <label asp-for="@Model.Staff.FirstName" class="col-3">First Name</label>
            <label asp-for="@Model.Staff.LastName" class="col-3">Last Name</label>
            <label asp-for="@Model.Date" class="col-3">Date</label>
        </div>
        <div class="row gap-1 mb-2">
            <input asp-for="@Model.Staff.FirstName" class="col-3" disabled />
            <input asp-for="@Model.Staff.LastName" class="col-3"disabled />
            <input asp-for="@Model.Date" class="col-3" />
        </div>
        <div class="row gap-1 mb-2">
            <label asp-for="@Model.Amount" class="col-3">Amount</label>
            <label asp-for="@Model.Reason" class="col-3">Reason</label>
            <label asp-for="@Model.Balance" class="col-3">Balance</label>
        </div>
        <div class="row gap-1 mb-2">
            <input type="number" asp-for="@Model.Amount" class="col-3" />
            <input asp-for="@Model.Reason" class="col-3" />
            <input type="number" asp-for="@Model.Balance" class="col-3" />
        </div>
        <input type="submit" class="btn btn-primary mt-4" value="Save" />
    </form>
</div>