<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - schoolApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/schoolApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <menu class="container">
            <ul>
                <li>
                    <a class="  " asp-area="" asp-controller="Student" asp-action="Index">Students</a>
                </li>
                <li>
                    <a class=" " asp-area="" asp-controller="Student" asp-action="Create">New Student</a>
                </li>
                <li>
                    <a class="" asp-area="" asp-controller="Student" asp-action="CreateCourse">
                      Add Course
                    </a>
                </li>
                <li>
                    <a class="" asp-area="" asp-controller="Student" asp-action="ViewCourses">
                        Courses
                    </a>
                </li>

            </ul>

        </menu>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - schoolApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
