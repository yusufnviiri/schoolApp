@model FeesJoinStudent
<div class="student_details">
<div>
<h5>Student Details </h5>
<table class="table table-hover mt-2">
    <thead>
        <tr><th>First Name</th>
            <th>Last Name</th>
                    <td>Sex</td>
                    <td>Level</td>
                    <td>Semester</td> </tr>
    </thead>
    <tbody>
        <tr class="table_data">
            <td>@Model.FirstName</td>
            <td>@Model.LastName</td> 
             <td>@Model.Sex</td>
            <td>@Model.SchoolLevel.LevelName</td>
            <td>@Model.Semester.SemesterName</td>
        </tr>
        <tr class="table_bold">
            <td>Village</td>
                    <td>District</td>
                    <td>Date Joined</td>
                    <td>Contact</td>
                    <td>Bith Date</td>
        </tr>
        <tr class="table_data">
            <td>@Model.Residance</td>
                   <td>@Model.District</td>
            <td>@Model.DayR <span>/</span>@Model.MonthR<span>/</span>@Model.YearR</td>      
            <td>@Model.ContactS</td>
            <td>@Model.DayB <span>/</span>@Model.MonthB<span>/</span>@Model.YearB</td>
        </tr>        
    </tbody>
</table>
    </div>
    <div><h5>Guardian Details </h5>
        <table class="table table-hover mt-1">
            <thead>
                <tr><th>First Name</th>
                    <th>Last Name</th>
                    <td>Relationship</td>
                    <td>Sex</td>
                </tr>
            </thead>
            <tbody>
                <tr class="table_data">
                    <td>@Model.Guardian.FirstName</td>
                    <td>@Model.Guardian.LastName</td>
                    <td>@Model.Guardian.Relationship</td>
                    <td>@Model.Guardian.Sex</td>
                </tr><tr class="table_bold">
                    <td>District</td>
                    <td>Village</td>
                    <td>Contact</td>
                    <td>Age</td>
                </tr>
                <tr class="table_data">
                    <td>@Model.Guardian.Residance</td>
                    <td>@Model.Guardian.District</td>
                    <td>@Model.Guardian.Contact</td>
                    <td>@Model.Guardian.Age</td>
                </tr>                
            </tbody></table>
    </div>
</div>
<div>
    <h5 class="mt-3">Actions</h5>
    <div class="student_actions">
        <ul>
        <li>
                <a asp-area="" asp-route-id="@Model.StudentId" asp-controller="Student" asp-action="FeesPaymentDetails">
        Fees payment Details
    </a>
        </li>
        <li><a asp-area="" asp-route-id="@Model.StudentId" asp-controller="Student" asp-action="LevelChangesLog">
            Registration History
        </a>
        </li>
        <li><a asp-area="" asp-route-id="@Model.StudentId" asp-controller="Student" asp-action="StudentReport">
       Report Card
    </a>
        </li>
        <li>
    <a asp-area="" asp-route-id="@Model.StudentId" asp-controller="Library" asp-action="BorrowItem">
        Borrow Book
            </a>
        </li>
        <li>
        <a  asp-area="" asp-route-id="@Model.StudentId" asp-controller="Student" asp-action="LevelCourses">
            Attendance Record
        </a>
        </li>
    </ul>
    </div>
</div>