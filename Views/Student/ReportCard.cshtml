@model ODatamanager
<div class="container">
  <h5 class=" w-75 m-auto my-2">Report Card for @Model.student.FirstName @Model.student.LastName</h5>
    <form method="post" > 
    <input asp-for="@Model.studentId" hidden/>
        <div class="row gap-1 mb-2">
            <label class="col-3"> Course Name</label>
            <label class="col-2" >CAT1</label>
            <label class="col-2" >CAT2</label>
            <label class="col-2" >Mid Exam</label>
            <label class="col-2" >Final</label>
        </div>
        @foreach(var course in Model.Courses)
        {
          <input asp-for="@course.CourseId" hidden/>
            <div class="row gap-1 mb-2">
                <input class="col-3" asp-for="@course.CourseName" disabled />
                <input class="col-2" asp-for="@course.Assessement.Cat1" />
                <input class="col-2" asp-for="@course.Assessement.Cat2" />
                <input class="col-2" asp-for="@course.Assessement.MidExam" />
                <input class="col-2" asp-for="@course.Assessement.Final" />
            </div>
        }
        <input type="submit" class="btn btn-primary mt-4" value="Save Report" />
    </form>
    </div>